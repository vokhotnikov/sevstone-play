# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
#
# Home page
GET     /                           controllers.Application.index

GET     /glossary                   controllers.Glossary.index


GET     /edit/pick-out-places       controllers.edit.PickOutPlacesController.index

GET     /edit/pick-out-places/new   controllers.edit.PickOutPlacesController.create
POST    /edit/pick-out-places       controllers.edit.PickOutPlacesController.save

GET     /edit/pick-out-places/:id   controllers.edit.PickOutPlacesController.edit(id: Long)
POST    /edit/pick-out-places/:id   controllers.edit.PickOutPlacesController.update(id: Long)

GET     /edit/deposits-places       controllers.edit.DepositsPlacesController.index

GET     /edit/deposits-places/new   controllers.edit.DepositsPlacesController.create
POST    /edit/deposits-places       controllers.edit.DepositsPlacesController.save

GET     /edit/deposits-places/:id   controllers.edit.DepositsPlacesController.edit(id: Long)
POST    /edit/deposits-places/:id   controllers.edit.DepositsPlacesController.update(id: Long)

GET     /edit/expositions       controllers.edit.ExpositionsController.index

GET     /edit/expositions/new   controllers.edit.ExpositionsController.create
POST    /edit/expositions       controllers.edit.ExpositionsController.save

GET     /edit/expositions/:id   controllers.edit.ExpositionsController.edit(id: Long)
POST    /edit/expositions/:id   controllers.edit.ExpositionsController.update(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
